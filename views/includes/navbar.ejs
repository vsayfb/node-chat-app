<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <% if (user._id) { %>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Messages
            <span class="text-warning"><%=user.notifications.length%></span>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if (user.notifications.length) { %> <% for( let i = 0; i <
            user.notifications.length; i++ ) { %>
            <li>
              <a
                class="dropdown-item border-bottom"
                href=" <%=user.notifications[i].event%>"
                onclick="seenNotification('<%=user.notifications[i]._id%>')"
              >
                <h6 class="text-success">
                  <%=user.notifications[i].origin.name%>
                </h6>
                <p class="mb-0"><%=user.notifications[i].text%></p>
              </a>
            </li>

            <% } %> <% } %>
          </ul>
        </li>
        <% } %>
      </ul>
      <% if (!user._id) { %>
      <div>
        <a href="/auth/login" class="text-decoration-none text-dark me-4"
          >Log In</a
        >
        <a href="/auth/register" class="text-decoration-none text-dark"
          >Register</a
        >
      </div>
      <% } %> <% if (user._id) { %>
      <div>
        <% if (user._id) { %>
        <div><%=user.name%></div>
        <% } %>
        <a href="/auth/logout" class="text-decoration-none">Logout</a>
      </div>
      <% } %>
    </div>
  </div>
</nav>
